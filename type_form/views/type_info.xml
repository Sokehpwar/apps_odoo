<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<!-- Type -->
        <record id="type_info_form" model="ir.ui.view">
            <field name="name">Type</field>
            <field name="model">type.info</field>
            <field name="arch" type="xml">
                <form string="Type">
                    <sheet>
                        <group col="2">
                            <field name="name" placeholder='e.g. "Store"'/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_type_info_list" model="ir.ui.view">
            <field name="name">Type</field>
            <field name="model">type.info</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_type_info_search" model="ir.ui.view">
            <field name="name">type.info.search</field>
            <field name="model">type.info</field>
            <field name="arch" type="xml">
                <search string="Search Type">
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_type_info" model="ir.actions.act_window">
            <field name="name">Type</field>
            <field name="res_model">type.info</field>
            <field name="search_view_id" ref="view_type_info_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a Type
              </p><p>
                Assign customer type to your contacts to organize, filter and track them.
              </p>
            </field>
        </record>
	
		<menuitem id="menu_type_info" name="Type Info"
            parent="contacts.menu_localisation" action="action_type_info" groups="base.group_partner_manager"/>
	</data>
</odoo>